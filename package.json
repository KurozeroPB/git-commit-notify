{
	"name": "vscode-commit-reminder",
	"displayName": "Commit Reminder",
	"description": "Periodically notify to commit new changes",
	"publisher": "Kurozero",
	"version": "0.1.1",
	"icon": "assets/icon-128x128.png",
	"engines": {
		"vscode": "^1.46.0"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/KurozeroPB/vscode-commit-reminder.git"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"main": "./build/extension.js",
	"scripts": {
		"pack": "vsce package --out ./pkgs",
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile",
		"test": "code-insiders --extensionDevelopmentPath=\"/media/pvdbroek/Data/Projects/NodeJS/vscode-commit-reminder\""
	},
	"dependencies": {
		"simple-git": "^2.7.2",
		"yukikaze": "^0.3.0"
	},
	"devDependencies": {
		"@types/glob": "^7.1.2",
		"@types/node": "^14.0.13",
		"@types/vscode": "^1.46.0",
		"@typescript-eslint/eslint-plugin": "^3.3.0",
		"@typescript-eslint/parser": "^3.3.0",
		"eslint": "^7.2.0",
		"glob": "^7.1.6",
		"gts": "^2.0.2",
		"tslint": "^6.1.2",
		"typescript": "^3.9.5",
		"vscode-test": "^1.4.0"
	},
	"contributes": {
		"configuration": {
			"title": "Commit Reminder",
			"properties": {
				"commitReminder.interval": {
					"type": "number",
					"default": 30,
					"description": "Set the interval in minutes"
				},
				"commitReminder.minimumFileChanges": {
					"type": "number",
					"default": 2,
					"description": "Set the minimum file changes"
				},
				"commitReminder.minimumChanges": {
					"type": "number",
					"default": 10,
					"description": "Set the minimum changes(Insertions + Deletions)"
				}
			}
		}
	}
}
